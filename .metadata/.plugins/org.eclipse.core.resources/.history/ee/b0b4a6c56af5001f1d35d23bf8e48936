package com.exea;

public class ScoreBean {
	private String name;
	private int kor;
	private int eng;
	private int math;
	
	//setter
	public void setName(String name) {
		this.name = name;
	}

	public void setKor(int kor) {
		this.kor = kor;
	}

	public void setEng(int eng) {
		this.eng = eng;
	}

	public void setMath(int math) {
		this.math = math;
	}

	//총점 구하는 메소드
	public int getTotal() {
		return kor+eng+math;
	}
	//평균
	public float getAvg() {
		return (kor+eng+math)/3.0f;
	}
}
